    <script>
        const navLinks = document.querySelectorAll('.nav-link');
        const contentSections = document.querySelectorAll('.content-section');
        const accordionHeaders = document.querySelectorAll('.accordion-header');
        const tabLinks = document.querySelectorAll('.tab-link');
        const tabContents = document.querySelectorAll('.tab-content');

        function showSection(targetId) {
            contentSections.forEach(section => {
                section.classList.remove('active');
                if (section.id === targetId) {
                    section.classList.add('active');
                }
            });
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.dataset.target === targetId) {
                    link.classList.add('active');
                }
            });
            window.scrollTo(0, 0); // Scroll to top on section change
        }

        navLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const targetId = e.target.closest('.nav-link').dataset.target;
                showSection(targetId);
            });
        });

        accordionHeaders.forEach(header => {
            header.addEventListener('click', () => {
                const content = header.nextElementSibling;
                const icon = header.querySelector('span');
                if (content.style.display === "block") {
                    content.style.display = "none";
                    icon.innerHTML = '&#9660;'; // Down arrow
                } else {
                    content.style.display = "block";
                    icon.innerHTML = '&#9650;'; // Up arrow
                }
            });
        });

        tabLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const targetTab = e.target.dataset.tab;

                tabLinks.forEach(tl => {
                    tl.classList.remove('text-sky-600', 'border-sky-600', 'font-semibold');
                    tl.classList.add('text-slate-500');
                });
                e.target.classList.add('text-sky-600', 'border-sky-600', 'font-semibold');
                e.target.classList.remove('text-slate-500');
                
                tabContents.forEach(content => {
                    content.classList.add('hidden');
                    if (content.id === targetTab) {
                        content.classList.remove('hidden');
                    }
                });
            });
        });
        
        // Initial section display based on hash or default to home
        const initialTarget = window.location.hash ? window.location.hash.substring(1) : 'home';
        showSection(initialTarget);
        navLinks.forEach(link => { // Ensure correct active link on load
            if (link.dataset.target === initialTarget) {
                link.classList.add('active');
            } else {
                link.classList.remove('active');
            }
        });


        // Chart.js
        const ctx = document.getElementById('cyberSecurityChart')?.getContext('2d');
        if (ctx) {
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Incidentes de Cibersegurança (Setor Educacional)', 'Vazamentos de Dados Confirmados (Setor Educacional)'],
                    datasets: [{
                        label: 'Número de Ocorrências/Ano',
                        data: [1780, 1537],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.7)', // sky-500
                            'rgba(14, 165, 233, 0.7)'  // sky-600
                        ],
                        borderColor: [
                            'rgba(59, 130, 246, 1)',
                            'rgba(14, 165, 233, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Número de Ocorrências'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += context.parsed.y;
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        }
    </script>
</body>
</html>
